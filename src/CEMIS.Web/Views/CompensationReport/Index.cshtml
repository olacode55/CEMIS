@{
}


@using (Html.BeginForm("GetCompensation", "CompensationReport", FormMethod.Post))
{
    <div class="form-group col-md-12">
        <label>Month<b style="color:red">*</b></label>
        @Html.DropDownList("month", new SelectList(ViewBag.Month, "I", "M"), "Select Month", new { @class = "custom-select form-control-sm" })

    </div>
    <div class="form-group col-md-12">
        <label>Year<b style="color:red">*</b></label>
        <select id="year" name="year" class="custom-select custom-select-sm">
            <option value="1"> Select Year</option>
            @foreach (var item in ViewBag.Year)
            {
                <option>@item</option>

            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary" style="float:right">Fetch</button>
}