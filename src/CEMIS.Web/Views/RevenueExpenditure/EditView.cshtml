
@model IEnumerable<CEMIS.Business.Model.RevenueExpenditureViewModel>
@using CEMIS.Business.Model
@{

    ViewBag.Title = "Revenue Expenditure";

}

<div class="row" style="margin-left:2px; margin-top:10px; margin-bottom:10px;">
    <div class="col-lg-12">

        <table>
            <tr>
                <td>
                    MDA:NATIONAL INSTITUTE OF TERTIARY INSTITUTION:

                </td>
                PERIOD OF REPORTING: MARCH 2020

                <td> RETURN REPORT ON :FIXED ASSET</td>
                <td></td>

            </tr>
        </table>



        <table id="materialsTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Code</th>
                    @*<th>Account Title</th>*@
                    <th>Approve Budget</th>
                    <th>Amount Expended</th>
                    <th>Cumulative Amount</th>
                    <th>Total Amount Till Date</th>
                    <th>Balance(Accept Number &Aacute; Decimal)</th>



            </thead>
            <tbody>
                @{
                    int sn = 0;

                }
                @foreach (var item in Model)
                {


                    <tr>

                        <td>
                            <input class="form-control allow_decimal" name="LstRevenueExpenditureModelViewModel[@sn].code" id="LstFixedAssetModelViewModel[@sn].code" value="@item.code" />
                        </td>
                        @*<td>
                                <input class="form-control allow_decimal" name="LstFixedAssetModelViewModel[@sn].Accounttitle" id="LstFixedAssetModelViewModel[@sn].Accounttitle" value="@item.a" />
                            </td>*@
                        <td>
                            <input class="form-control allow_decimal" name="LstRevenueExpenditureModelViewModel[@sn].approvebudget" id="LstFixedAssetModelViewModel[@sn].approvebudget" value="@item.approvebudget" />

                        </td>
                        <td>
                            <input class="form-control allow_decimal" name="LstRevenueExpenditureModelViewModel[@sn].amountexpendedcurrentmonth" id="LstFixedAssetModelViewModel[@sn].amountexpendedcurrentmonth" value="@item.amountexpendedcurrentmonth" />
                        </td>

                        <td>
                            <input class="form-control allow_decimal" name="LstRevenueExpenditureModelViewModel[@sn].cumulativeamt" id="LstFixedAssetModelViewModel[@sn].cumulativeamt" value="@item.cumulativeamt" />
                        </td>
                        <td>
                            <input class="form-control allow_decimal" name="LstRevenueExpenditureModelViewModel[@sn].totalexpendituretodate" id="LstFixedAssetModelViewModel[@sn].totalexpendituretodate" value="@item.totalexpendituretodate" />
                        </td>
                        <td>
                            <input class="form-control allow_decimal" name="LstRevenueExpenditureModelViewModel[@sn].balance" id="LstFixedAssetModelViewModel[@sn].Balance" value="@item.balance" />
                        </td>

                        @{sn++;}
                    </tr>
                }

            </tbody>
            <tbody></tbody>
        </table>
        <div class="modal-footer">
            <input type="submit" value="Update" class="btn btn-success" />
            <input type="button" onclick="CloseModal()" value="Close" id="btnclose" name="btnclose" class="btn btn-danger" />

        </div>

    </div>
</div>
