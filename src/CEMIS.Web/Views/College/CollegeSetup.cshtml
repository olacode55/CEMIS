                        @Html.ValidationMessageFor(x => @x.VicePrincipalPhone, null, new { @style = "color:red" })
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label>ICT System Name<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.ICTSystemName, new { @class = "form-control", required = "true" })
                        @Html.ValidationMessageFor(x => @x.ICTSystemName, null, new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label>ICT System Email<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.ICTSystemEmail, new { @class = "form-control", @type = "Email", required = "true", })
                        @Html.ValidationMessageFor(x => @x.ICTSystemEmail, null, new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label>ICT System Phone<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.ICTSystemPhone, new { @class = "form-control", @type = "Phone", required = "true", })
                        @Html.ValidationMessageFor(x => @x.ICTSystemPhone, null, new { @style = "color:red" })
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label>Admin Officer Name<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.AdminOfficerName, new { @class = "form-control", required = "true" })
                        @Html.ValidationMessageFor(x => @x.AdminOfficerName, null, new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label>Admin Office Email<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.AdminOfficerEmail, new { @class = "form-control", @type = "Email", required = "true", })
                        @Html.ValidationMessageFor(x => @x.PrincipalEmail, null, new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label>Admin Office Phone<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.AdminOfficerPhone, new { @class = "form-control", @type = "Phone", required = "true", })
                        @Html.ValidationMessageFor(x => @x.AdminOfficerPhone, null, new { @style = "color:red" })
                    </div>

                </div>

                <div class="row" style="margin-top:20px">
                    <div class="col-md-12">

                        <a class="btn btn-default" style="float:left" href="@Url.Action("Index","College", new { Id = Model.Id})"> Back To Preview </a>
                        <button type="submit" style="float:right" class="btn btn-primary">Submit</button>


                    </div>
                </div>

            </div>



        </div>


    </div>
}
