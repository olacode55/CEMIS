                        @Html.TextBoxFor(x => x.SecurityGuardCount, new { @class = "form-control", required = "true" })
                        @Html.ValidationMessageFor(x => @x.SecurityGuardCount, null, new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label>No of Cleaner<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.CleanerCount, new { @class = "form-control", required = "true", })
                        @Html.ValidationMessageFor(x => @x.CleanerCount, null, new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">

                    </div>

                </div>


                <div class="panel-heading"><h3><b>Various Contact / Info</b></h3> </div>


                <div class="row">
                    <div class="col-md-4">
                        <label>Principal Name<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.PrincipalName, new { @class = "form-control", required = "true" })
                        @Html.ValidationMessageFor(x => @x.PrincipalName, null, new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label>Principal Email<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.PrincipalEmail, new { @class = "form-control", required = "true", })
                        @Html.ValidationMessageFor(x => @x.PrincipalEmail, null, new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label>Principal Phone<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.PrincipalPhone, new { @class = "form-control", required = "true", })
                        @Html.ValidationMessageFor(x => @x.PrincipalPhone, null, new { @style = "color:red" })
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label>Vice Principal Name<b style="color:red">*</b></label>
                        @Html.TextBoxFor(x => x.VicePrincipalName, new { @class = "form-control", required = "true" })
