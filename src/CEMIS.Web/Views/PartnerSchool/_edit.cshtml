@using CEMIS.Utility.ViewModel
@model PartnerSchoolViewModel

<div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <form method="post" enctype="multipart/form-data" asp-action="Edit">

            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title" style="text-align:center">Add Partner School</h4>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" id="eId" />

                <div class="modal-body">


                    <div class="row">
                        <div class="col-md-6">
                            <label>School Name</label>
                            <input class="form-control" asp-for="Name" id="eName" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label>Head Teacher Name</label>
                            <input class="form-control" asp-for="HeadTeacher" id="eHeadTeacher" />
                            <span asp-validation-for="HeadTeacher" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Phone</label>
                            <input class="form-control" asp-for="Phone" id="ePhone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label>Address</label>
                            <input class="form-control" asp-for="Address" id="eAddress" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>No. Of Mantees</label>
                            <input class="form-control" asp-for="NoOfMantees" id="eNoOfMantees" />
                            <span asp-validation-for="NoOfMantees" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            @*<label>Head Teacher Name<b style="color:red">*</b></label>
                                <input class="form-control" asp-for="HeadTeacher" />
                                <span asp-validation-for="HeadTeacher" class="text-danger"></span>*@
                        </div>
                    </div>




                </div>


                <div class="modal-footer">
                    <div class="row">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn btn-danger" asp-action="Index">Close</a>
                    </div>

                </div>

            </div>

        </form>

    </div>
</div>