@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="register-box-body">
    <p class="login-box-msg">&nbsp; &nbsp;<b>OPIS <b />Reset Password</p>
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        @Html.HiddenFor(model => model.userCode)

        <div class="row">
            @**@<div class="col-sm-7">
            </div>
            <div class="form-group has-feedback col-sm-5">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "New password" })
                @*<input type="password" class="form-control" placeholder="Password">*@
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback col-sm-5">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Retype password" })
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">

            </div>
            <!-- /.col -->
            <div class="col-sm-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
            </div>
            <!-- /.col -->
        </div>
    }
    @*<a href="@Url.Action("Login","Account")" class="text-center">I already have a membership</a>*@
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
}

