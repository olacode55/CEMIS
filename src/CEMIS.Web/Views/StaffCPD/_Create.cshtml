                <div class="row">

                    <div class="form-group col-md-12">
                        <div class="col-md-4"><label>Staff Name: </label></div>
                        <div class="col-md-8">
                            <select asp-for="StaffId" asp-items="ViewBag.Staff" class="custom-select form-control-sm">
                                <option value="0" selected>--- Select Staff ---</option>
                            </select>
                            <span asp-validation-for="StaffId" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="form-group col-md-12">
                        <div class="col-md-4"><label>Academic Year: </label></div>
                        <div class="col-md-8">
                            <select asp-for="SessionId" asp-items="ViewBag.Session" class="custom-select form-control-sm">
                                <option value="0" selected>--- Select Academic Year ---</option>
                            </select>
                            <span asp-validation-for="SessionId" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="form-group col-md-12">
                        <div class="col-md-4"><label>Semester: </label></div>
                        <div class="col-md-8">
