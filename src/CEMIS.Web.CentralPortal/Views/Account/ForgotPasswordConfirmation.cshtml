@model ForgetPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<main role="main">
    <div class="container">
        <div class="row p-2">
            <div class="col-lg-16">
                <div class="front--text">
                    <span class="hr" style="width: 50px;background:#0393dd;height:6px;border-radius:3px;display:block"></span>
                    <h2 class="hero-text">
                        Cemis
                    </h2>
                    
                </div>
            </div>
            <div class="col-lg-8">

                <div class="bg-light login--form">
                    <h2 class="w-300 mb-4">@ViewBag.Title.</h2>

                    <div class="form-group">

                        <div class="form-group has-feedback">
                            <p>Please check your email to reset your password.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <a role="button" href="@Url.Action("Login","Account")" class="btn btn-primary btn-block btn-flat">Return To Login </a>
                    </div>
                </div>

            </div>

        </div>
    </div>

</main>


